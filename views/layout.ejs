          if(flash.success && flash.success.length > 0) {

          new Noty({
            theme: 'relax',
            type: 'success',
            layout: 'topRight',
            text: '<%= flash.success%>',
            timeout: 1500
          }).show();

           } else if (flash.error && flash.error.length > 0) {

