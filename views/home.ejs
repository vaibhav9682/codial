<h1>
    Codial / <%= title %>
</h1>



<section id="feed-post">
    <h4>Post</h4>
    <%if(locals.user){%>
    <form action="/post/create" id="new-post-form" method="POST">
        <textarea name="content" placeholder="type here..." cols="30" rows="10"></textarea>
        <input type="submit" value="Post">
    </form>
          <%}%>
    <div id="post-list-container">
        <ul>

            <%for(post of posts){%>
                
                <p>
                    <li>
                        <%= post.content%>
                        
                            <small>
                                <%= post.user.name%>
                            </small>
                    </li>
    
                </p>
               
                <%}%>

        </ul>
    </div>
</section>